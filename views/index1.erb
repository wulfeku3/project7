<h1>United States Holidays</h1>

<!-- ~~~~~~~~~~~~ begin form ~~~~~~~~~~~~~~ -->

  <form>

    <div class="form-group">
      <label for="which_country">Country</label>
      <select name="which_country" class="form-control">
        <option value="">Select a Country</option>
        <% countries = [{name: 'United States', abbreviation: 'US'}, {name: 'Great Britain', abbreviation: 'GB'}, {name: 'Brazil', abbreviation: 'BR'}, {name: 'Belgium', abbreviation: 'BE'}] %>
        <% countries.each do |country| %>
          <option value="<%= country[:abbreviation] %>" <%= 'selected="selected"' if params[:which_country] == country %>><%= country[:name] %></option>
        <% end %>
      </select>
    </div>

    <div class="form-group">
      <label for="which_month">Month</label>
      <select name="which_month" class="form-control">
        <option value="">Select a Month</option>
        <% %w(january february march april may june july august september october november december).each_with_index do |month, index| %>
          <option value="<%= index+1 %>" <%= 'selected="selected"' if params[:which_month] == month %>><%= month.capitalize %></option>
        <% end %>
      </select>
    </div>

    <div class="form-group">
      <label for="which_year">Year</label>
      <input name="which_year" value="<%= params[:which_year] %>" type="number" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary btn-block">Show Holidays</button>
  </form>

<!-- ~~~~~~~~~~~~~~~ end form ~~~~~~~~~~~~~~~~~~~~~~~ -->

<hr>

<div id="holidays" class="well text-center">
  <!--<%= @currents.inspect %>-->
  <p><% @currents.each do |current|%>
    <li> <%= current[0]["name"] %> <%= current[0]["country"] %> <%= current[0]["date"] %> </li>
    <% end %></p>
</div>